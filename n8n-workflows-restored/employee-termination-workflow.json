    },
    {
      "parameters": {
        "jsCode": "// Extract M365 user details\nconst m365User = $input.first().json;\nconst previousData = $('Validate Input & Prepare Data').first().json;\n\nreturn [{\n  ...previousData,\n  m365UserId: m365User.id,\n  userPrincipalName: m365User.userPrincipalName,\n  displayName: m365User.displayName,\n  mail: m365User.mail,\n  department: m365User.department,\n  jobTitle: m365User.jobTitle\n}];"
      },
      "id": "extract-m365-details",
      "name": "Extract M365 Details",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [850, 300]
    },
    {
      "parameters": {
        "operation": "search",
        "baseDN": "DC=insulationsinc,DC=local",
        "searchFilter": "=(|(sAMAccountName={{$json.employeeId}})(mail={{$json.employeeEmail}}))",
        "returnAttributes": "sAMAccountName,dn,memberOf,mail,displayName"
      },
      "id": "search-ad-user",

    },
    {
      "parameters": {
        "jsCode": "// Validate required fields\nconst required = ['employeeId', 'supervisorEmail'];\nconst missing = [];\n\nfor (const field of required) {\n  if (!$input.first().json[field]) {\n    missing.push(field);\n  }\n}\n\nif (missing.length > 0) {\n  throw new Error(`Missing required fields: ${missing.join(', ')}`);\n}\n\n// Extract and prepare data\nconst data = {\n  employeeId: $input.first().json.employeeId,\n  employeeEmail: $input.first().json.employeeEmail || '',\n  supervisorEmail: $input.first().json.supervisorEmail,\n  reason: $input.first().json.reason || 'Termination',\n  ticketNumber: $input.first().json.ticketNumber || '',\n  timestamp: new Date().toISOString()\n};\n\nreturn [data];"
      },
      "id": "validate-input",
      "name": "Validate Input & Prepare Data",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [450, 300],
      "onError": "continueErrorOutput"
    },
    {
      "parameters": {
        "url": "=https://graph.microsoft.com/v1.0/users/{{$json.employeeEmail || $json.employeeId}}",
        "authentication": "genericCredentialType",
        "genericAuthType": "oAuth2Api",
        "method": "GET",
        "options": {
          "timeout": 10000
        }
      },
      "id": "get-m365-user",
      "name": "Get M365 User",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4,
      "position": [650, 300],
      "credentials": {
        "oAuth2Api": {
          "id": "1",
